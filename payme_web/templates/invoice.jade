extends layout

block content
  .container(ng-controller='InvoiceCtrl', ng-init='init(#{session_json}, "#{invoice_id}")')
    .row(ng-show="state=='loading'")
      .col-xs-12.col-md-6.col-md-offset-3
        .invoice-init-loader &nbsp;
    .row(ng-show="state=='failed'")
      .col-xs-12.col-md-6.col-md-offset-3
        h1 Ошибка
        p {{ error.message }}
    .row(ng-show="state=='loaded'" id='invoice-child-view') 
