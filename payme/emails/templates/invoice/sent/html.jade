extends ../../layout

block title
  title Счет отправлен
  
block content
  +table_wrapper(email)
    +tr_title("Счет отправлен")
    +tr_space(15)
    +tr_amount(email.invoice.amount, 'blue')
    +tr_desc
      +p_name('Кому', email.invoice.payer)
      +p_comment(email.invoice.text)
      +p_expire(email.invoice.expire_at)
      +p_card('На карту', email.invoice.owner_card)
    +tr_space(25)
    +tr_primary_action(email.cancelUrl, "Отменить счет")
    +tr_space(15)
    +tr_secondary_action(email.invoiceUrl, "Открыть квитанцию")
    +tr_space(25)
