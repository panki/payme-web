extends ../../layout

block title
  title Invoice refused
  
block content
  if email.address == email.invoice.owner.email
    +table_wrapper("#0366cb")
      +tr_title("Отказ от оплаты")
      +tr_reason
          p= email.invoice.refuse_reason
      +tr_space(15)
      +tr_amount(email.invoice.amount)
      +tr_desc
          p От: #{email.invoice.payer.name}
          p= email.invoice.text
      +tr_space(15)
      +tr_secondary_action(email.invoiceUrl, "Открыть квитанцию")
      +tr_space(15)
  else
    +table_wrapper("#0366cb")
      +tr_title("Отказ от оплаты")
      +tr_space(15)
      +tr_reason
          p= email.invoice.refuse_reason
      +tr_space(15)
      +tr_amount(email.invoice.amount)
      +tr_desc
          p Кому: #{email.invoice.owner.name}
          p= email.invoice.text
      +tr_space(15)
      +tr_secondary_action(email.invoiceUrl, "Открыть квитанцию")
      +tr_space(15)
    
