.container(ng-controller='InvoiceDoneCtrl')
  form(novalidate).row
    .col-xs-12.col-md-6.col-md-offset-3
      div(ng-switch="invoice.state")
        h1(ng-switch-when="paid") Вы успешно оплатили счет
        h1(ng-switch-when="failed") Ошибка оплаты счета
        h1(ng-switch-when="expired") Истекло время оплаты счета
        h1(ng-switch-when="refused") Вы отказались от оплаты счета
        h1(ng-switch-when="cancelled") Отправитель отменил счет

    .col-xs-12.col-md-3.col-md-offset-3
      .form-group
        label Кому
        .form-control-static {{ invoice.owner.email }}
      
      .form-group(ng-visible='invoice.text')
        label Комментарий
        .form-control-static {{ invoice.text }}
          
      .form-group
        label Оплатить до
        .form-control-static {{ invoice.expire_at | date }}
          
    .col-xs-12.col-md-3
      
      .form-group
        label Сумма
        .form-control-static {{ invoice.amount | currency }}
        
      .form-group(ng-visible='invoice.transaction.fee > 0')
        label Сумма c комиссией
        .form-control-static {{ invoice.amount + invoice.transaction.fee | currency}}
          
      .form-group(ng-visible='invoice.transaction')
        label Оплата с карты
        .form-control-static {{ invoice.transaction.card.masked_number }}
        
    .col-xs-12.col-md-6.col-md-offset-3(ng-visible='invoice.state="paid"')
      .form-group
        button.btn.btn-primary.btn-block(ng-click='saveReceipt()') Сохранить квитанцию в PDF
