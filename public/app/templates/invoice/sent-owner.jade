.container(ng-controller='InvoiceSentOwnerCtrl')
  form(novalidate).row
    .col-xs-12.col-md-6.col-md-offset-3
      h1 Ожидание платежа

    .col-xs-12.col-md-3.col-md-offset-3
      .form-group
        label От
        br
        input.form-control(ng-model='invoice.owner.email' readonly)
      .form-group
        label Кому
        br
        input.form-control(ng-model='invoice.payer.email' readonly)
      .form-group
        label Сумма
        br
        input.form-control(ng-model='invoice.amount' readonly)
      .form-group
        label Комментарий
        input.form-control(ng-model='invoice.text' readonly)
      .form-group
        label Оплатить до
        input.form-control(ng-model='invoice.expire_at' readonly)

    .col-xs-12.col-md-3
      .form-group
        label Куда перевести деньги
        br
        input.form-control(ng-model='invoice.owner_card_number' readonly)
      .form-group
        button.btn.btn-default.btn-block Отменить
