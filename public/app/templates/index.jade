script.
  $(function() {
    $('body>.container').removeClass('container');

    function onResize() {
      var section = $('.section.invoice-new');
      var invoiceContainer = $('.section.invoice-new>div');
      var invoiceForm = invoiceContainer.find('form');

      section.height($(window).height() - $('.navbar').height());

      var marginTop = section.height() - invoiceForm.height() - 100;

      if (marginTop < 0) {
        marginTop = 0;
      }

      invoiceForm.css('margin-top', marginTop);
    }

    onResize();

    $(window).on('resize', onResize);

  });
