script.
  $(function() {
    $('body>.container').removeClass('container');
    var section = $('.section.invoice-new');
    var invoiceContainer = $('.section.invoice-new>div');
    var invoiceForm = invoiceContainer.find('form');
    var navBar = $('.navbar');
    
    function fixFormHeight() {
      var vh = Math.max(document.documentElement.clientHeight, window.innerHeight || 0);
      var sh = section.height();
      var fh = invoiceForm.height();
      var fullsized = invoiceForm.hasClass('fullsize');
      if (fullsized) {
        if (sh > vh + 60 ) {
          invoiceForm.removeClass('fullsize');
        }
      } else {
        sh = Math.min(sh, vh);
        if (sh - fh > 220) {
          invoiceForm.addClass('fullsize');
        }
      }
    }
    
    function resizeFormSection() {
      var wh = $(window).height();
      var minHeight = navBar.height() + invoiceForm.height() + 50;
      section.height(Math.max(wh, minHeight));
    }
    
    function centerForm() {
      var navHeight = navBar.height();
      section.parents('div').css('margin-top', -navHeight);
      var marginTop = (section.height() - invoiceForm.height()) / 2;
      invoiceForm.css('margin-top', Math.max(marginTop, navHeight));
    }

    function onResize() {
      resizeFormSection();
      fixFormHeight();
      centerForm();
    }

    onResize();

    $(window).on('resize', onResize);

  });
