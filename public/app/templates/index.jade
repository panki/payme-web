.section.invoice-new
  .container(ng-controller="InvoiceNewCtrl")
    form(id="new_invoice", name="form", ng-submit='submit(form.$valid)')
        fieldset
          .row
            .col-xs-12.col-md-10.col-md-offset-1
              h1 Получить деньги безопасно и просто
              p(style="font-size: 18px") Теперь вам не нужно обмениваться номерами банковских карт, достаточно ввести сумму и адреса электронной почты &mdash; свою и того, кто отправит деньги.

          .row
            .col-xs-12.col-md-8
              .form-group
                .input-group.amount-group
                  input.input-lg.form-control(id="amount", type="text", name="amount", ng-model="invoice.amount", maxlength="5", required, autosize, zero-input, invoice-amount, size-delta="16")
                  span.input-group-addon &#8381;

          .row
            .hidden-xs.col-sm-10.col-sm-offset-2.col-md-10.col-md-offset-2
              img(src="/public/app/images/from-to.png", alt="", style="height: 110px;")

          .row
            .col-xs-12.col-md-10.col-md-offset-1
              .row
                .form-group.col-xs-12.col-sm-6.col-md-4
                  label(for="payer_email") От кого
                  input.input-lg.form-control(type="text", name="payer_email", ng-model="invoice.payer_email", placeholder="От e-mail", required, email)
                .form-group.col-xs-12.col-sm-6.col-md-4
                  label(for="owner_email")
                    | Кому
                    span &mdash; это вы
                  input.input-lg.form-control(type="text", name="owner_email", ng-model="invoice.owner_email", placeholder="Ваш e-mail", required, email)
                .form-group.col-xs-12.col-sm-6.col-sm-offset-6.col-md-4.col-md-offset-0
                  label &nbsp;
                  button.btn.btn-primary.btn-lg.btn-block(type="submit") Продолжить

